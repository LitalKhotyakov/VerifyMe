<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/successTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/success_title"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/successSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/success_subtitle"
        android:textColor="#0277BD"
        android:textSize="18sp" />

    <!-- Explanation -->
    <TextView
        android:id="@+id/successExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/success_explanation"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal" />

    <!-- Conditions List -->
    <LinearLayout
        android:id="@+id/conditionsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="start">

        <!-- Row 1: Battery -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            tools:ignore="UseCompoundDrawables">



            <TextView
                android:id="@+id/battery_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_condition"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/star_battery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_yellow"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/star_description"/>
        </LinearLayout>

        <!-- Row 2: Wi-Fi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            tools:ignore="UseCompoundDrawables">



            <TextView
                android:id="@+id/wifi_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_condition"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/star_wifi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_yellow"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/star_description"/>

        </LinearLayout>

        <!-- Row 3: Light -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            tools:ignore="UseCompoundDrawables">


            <TextView
                android:id="@+id/light_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light_condition"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/star_light"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_yellow"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/star_description"/>
        </LinearLayout>

        <!-- Row 4: Bluetooth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            tools:ignore="UseCompoundDrawables">



            <TextView
                android:id="@+id/bluetooth_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bluetooth_condition"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/star_bluetooth"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_yellow"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/star_description"/>
        </LinearLayout>

        <!-- Row 5: Temperature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            tools:ignore="UseCompoundDrawables">



            <TextView
                android:id="@+id/temperature_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_condition"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/star_temperature"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_yellow"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/star_description"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
